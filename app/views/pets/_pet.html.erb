<div id="<%= dom_id pet %>">
  <p>
    <strong>Name:</strong>
    <%= pet.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= pet.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= pet.price %>
  </p>

  <p>
    <strong>Age:</strong>
    <%= pet.age %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= pet.category %>
  </p>

  <p>
    <strong>Delivery to client:</strong>
    <%= pet.delivery_to_client %>
  </p>

  <p>
    <strong>Insuranse:</strong>
    <%= pet.insuranse %>
  </p>

  <p>
    <% pet.image.each do |image| %>      
      <% if @pet.image.any? %>
      <%= image_tag @pet.image.first, class: "w-full h-96 object-cover" %>
      <div class="grid grid-cols-3 gap-4 mt-4"> 
        <% @pet.image[1..].each do |i| %>
          <%= image_tag i, class: "w-full h-32 object-cover" %>
        <% end %>
      </div>
    <% end %>
    <% end %>
  </p>

  <p>
    <strong>User:</strong>
    <%= pet.user_id %>
  </p>

</div>
