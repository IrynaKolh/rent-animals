<div id="<%= dom_id pet %>" class="container-fluid my-5">
    <div class="row mx-5">
      <div class="col-md-6 text-center">
        <%= image_tag(pet.image.present? ? pet.image.first : asset_path('default-img.png'),
        style: "width: 90%; height: 600px; object-fit: cover; object-position: center;") %>
      </div>

    <div class="col-md-6 my-5">
      <h3 class="display-3" style="font-family: 'Nerko';"><%= pet.name %></h3>
      <p>
        <strong><%= pet.description %></strong>        
      </p>
      
      <p>
        <strong>Age:</strong>
        <%= pet.age %>
      </p>
      <p>
        <strong>Price:</strong>
        <%= number_to_currency pet.price %> per/hour
      </p>

      <ul>
        <% if pet.delivery_to_client %><li>Delivery to client</li> <% end %>
        <% if pet.insuranse %><li>Have pet insurance </li> <% end %>
      </ul>
     
      <div>
        <% if user_signed_in? && pet.user == current_user  %>
          <%= link_to "Edit", edit_pet_path(@pet), class: "btn btn-primary ml-5"  %>        
          <%= link_to "Delete ", @pet, method: :delete, class: "btn btn-danger ml-5"  %>
        <% end %>        
         <%= link_to "Back to pets", pets_path, class: "btn btn-secondary ml-5"  %>
      </div>
    </div>

  </div>
</div>
